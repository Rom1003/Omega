{% extends 'siteBundle::base.html.twig' %}
{% block titre_page %}<h1>Ajout d'un cours</h1><hr>{% endblock %}   
{% block contenu %}
{{ form_start(form) }}

    {{ form_errors(form) }}
<div class="col-lg-12" id="ajout_cours">

    <div class="col-lg-7">
        <div class="form-group">
            <div class="col-sm-6">
                {{ form_label(form.intituleCours, "Titre du cours", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.intituleCours) }}
                {{ form_widget(form.intituleCours, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-sm-6">
                {{ form_label(form.datefCours, "La publication prendra fin le :", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.datefCours) }}
                {{ form_widget(form.datefCours, {'attr': {'class': ''}}) }}
            </div>
        </div>     
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_label(form.introCours, "Introduction du cours", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.intituleCours) }}
            </div>
            <div class="col-sm-12">
                {{ form_widget(form.introCours, {'attr': {'class': 'form-control', 'rows':'9','placeholder':'Votre message ici...','title':'Renseignez votre message'}}) }}
            </div>
        </div>         
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_label(form.affCours, "Cocher pour cacher le cours", {'label_attr': {'class': 'control-label'}}) }}
                {{ form_errors(form.affCours) }}
            </div>
            <div class="col-sm-12">
                {{ form_widget(form.affCours, {'attr': {'class': ''}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
            <hr>                
                {{ form_widget(form.Publier, {'attr': {'class': 'control-label btn btn-primary'}}) }}
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="form-group">
            <div class="col-sm-12">
                {{ form_label(form.imageFile, "Ajouter une image", {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.imageFile) }}
                {{ form_widget(form.imageFile, {'attr': {'class': ''}}) }}
            </div>
        </div>
    </div>

</div>
    {{ form_rest(form) }}

{{ form_end(form) }}
{% endblock %}
